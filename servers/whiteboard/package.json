{
  "name": "whiteboard-mcp-server",
  "version": "1.0.0",
  "description": "A collaborative whiteboard MCP server with real-time editing support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "whiteboard-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "echo 'Migration handled by dedicated migration service'",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "whiteboard",
    "collaboration",
    "real-time",
    "canvas",
    "drawing",
    "typescript"
  ],
  "author": "MCP Framework",
  "license": "MIT",
  "dependencies": {
    "@tylercoles/mcp-server": "0.2.2",
    "@tylercoles/mcp-transport-http": "0.2.2",
    "kysely": "^0.27.3",
    "pg": "^8.11.3",
    "ws": "^8.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tylercoles/mcp-framework",
    "directory": "servers/whiteboard"
  }
