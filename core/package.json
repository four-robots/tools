{
  "name": "@mcp-tools/core",
  "version": "1.0.0",
  "description": "Shared core services and utilities for MCP Tools ecosystem",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./kanban": {
      "import": "./dist/services/kanban/index.js",
      "types": "./dist/services/kanban/index.d.ts"
    },
    "./memory": {
      "import": "./dist/services/memory/index.js",
      "types": "./dist/services/memory/index.d.ts"
    },
    "./memory-processing": {
      "import": "./dist/services/memory-processing/index.js",
      "types": "./dist/services/memory-processing/index.d.ts"
    },
    "./wiki": {
      "import": "./dist/services/wiki/index.js",
      "types": "./dist/services/wiki/index.d.ts"
    },
    "./scraper": {
      "import": "./dist/services/scraper/index.js",
      "types": "./dist/services/scraper/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared/types/index.js",
      "types": "./dist/shared/types/index.d.ts"
    },
    "./quality": {
      "import": "./dist/services/quality/index.js",
      "types": "./dist/services/quality/index.d.ts"
    },
    "./unified-search": {
      "import": "./dist/services/unified-search/index.js",
      "types": "./dist/services/unified-search/index.d.ts"
    },
    "./codebase": {
      "import": "./dist/services/codebase/index.js",
      "types": "./dist/services/codebase/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "mcp-tools",
    "core",
    "services",
    "kanban",
    "memory",
    "wiki",
    "scraper",
    "shared-library"
  ],
  "author": "MCP Tools Team",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.23.9",
    "@gitbeaker/rest": "^43.4.0",
    "@huggingface/inference": "^2.6.4",
    "@mcp-tools/monorepo": "file:..",
    "@octokit/plugin-throttling": "^11.0.1",
    "@octokit/rest": "^22.0.0",
    "@tensorflow/tfjs-node": "^4.15.0",
    "@typescript-eslint/parser": "^7.0.1",
    "axios": "^1.11.0",
    "crypto": "^1.0.1",
    "cyclejs": "^2.4.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "java-parser": "^2.0.0",
    "kysely": "^0.27.3",
    "licensee": "^8.2.0",
    "marked": "^16.1.1",
    "nats": "^2.29.3",
    "node-cve": "^1.2.0",
    "onnxruntime-node": "^1.16.3",
    "openai": "^4.24.7",
    "osv-scanner": "^1.4.3",
    "pg": "^8.16.3",
    "pg-pool": "^3.10.1",
    "pgvector": "^0.1.8",
    "puppeteer": "^21.11.0",
    "slugify": "^1.6.6",
    "snyk": "^1.1000.0",
    "spdx-license-list": "^6.8.0",
    "tree-sitter": "^0.20.4",
    "tree-sitter-cpp": "^0.20.0",
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-python": "^0.20.4",
    "tree-sitter-rust": "^0.20.4",
    "typescript": "^5.0.0",
    "uuid": "^10.0.0",
    "web-tree-sitter": "^0.20.8",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/babel__parser": "^7.0.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.15.5",
    "@types/puppeteer": "^5.4.7",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "tsup": "^8.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
